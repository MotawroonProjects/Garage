<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/gray3"
    tools:context=".activities.MaintenanceDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:id="@+id/image_bg"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/user_profile"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-75dp"
                android:clickable="false"
                android:longClickable="false"
                >
                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:siBorderWidth="1dp"
                    app:siBorderColor="@color/gray1"
                    app:siRadius="5dp"
                    app:siBorderType="stroke"
                    android:src="@drawable/user_profile"
                    android:clickable="false"
                    android:longClickable="false"
                    />
                <ImageView
                    android:id="@+id/image_update_photo"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="2dp"
                    android:src="@drawable/update_photo_camera"
                    android:padding="5dp"
                    android:background="@color/white"
                    />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_update_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:text="name"
                android:clickable="false"
                android:longClickable="false"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:text="@string/update"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/cardView_update_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="false"
                android:longClickable="false"
                android:descendantFocusability="blocksDescendants"
                android:weightSum="3"

                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="45dp"
                    android:src="@drawable/phone_icon"
                    android:padding="12dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="01017357658"
                    android:clickable="false"
                    android:longClickable="false"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textStyle="bold"

                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_update_email"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="false"
                android:longClickable="false"
                android:descendantFocusability="blocksDescendants"
                android:weightSum="3"

                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="45dp"
                    android:src="@drawable/blackmail"
                    android:padding="12dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="e@gmail.com"
                    android:clickable="false"
                    android:longClickable="false"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_update_password"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="false"
                android:longClickable="false"
                android:descendantFocusability="blocksDescendants"
                android:weightSum="3"

                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="45dp"
                    android:src="@drawable/password_icon"
                    android:padding="12dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:longClickable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:inputType="textPassword"
                    android:text="123456789"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_update_city"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="1dp"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="false"
                android:longClickable="false"
                android:descendantFocusability="blocksDescendants"
                android:weightSum="3"

                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="45dp"
                    android:src="@drawable/black_map_icon"
                    android:padding="12dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:longClickable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="egypt"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_update_nationality"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="false"
                android:longClickable="false"
                android:descendantFocusability="blocksDescendants"
                android:weightSum="3"

                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="45dp"
                    android:src="@drawable/flag"
                    android:padding="12dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />

                <TextView
                    android:id="@+id/tv_nationality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:longClickable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="egyptian"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/document_type_definition"
            />

        <LinearLayout
            android:id="@+id/ll_update_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            >
            <com.github.siyamed.shapeimageview.RoundedImageView

                android:layout_width="150dp"
                android:layout_height="150dp"
                app:siBorderWidth="1dp"
                app:siBorderColor="@color/gray1"
                app:siRadius="5dp"
                app:siBorderType="stroke"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"

                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>